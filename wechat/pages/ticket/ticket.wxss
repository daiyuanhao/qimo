/* pages/ticket/ticket.wxss */
page{
  background: rgba(238, 238, 238, 0.5);
}
view{background: #fff}
.ticket-img image{
  width: 100%;
  height: 300rpx
}
.ticket-title{
  padding: 10px
}
.ticket-tip{
  float:right;
  margin-right:10px
}
.ticket-address{
  font-size: 26rpx;
  padding:5px;
  color:#aaa;
  border-top:1px #ccc solid
}
.ticket-header{
  padding:10px;
  border-left: 2px #6b6 solid;
  border-bottom: 1px #ccc solid;
  margin-top:20px;
}
.ticket-list{
  padding:10px
}
.ticket-price{
  float:right;
  color:#ffac2f;
  margin-right: 30px 
}
.ticket-tag{
  border:1rpx solid #73dac8;
  font-size:24rpx;
  display: inline-block;
  color:#73dac8;
  padding:0 10rpx;
  margin:20rpx 10rpx 0 0;
}
.ticket-buy{
  float:right;
  background: rgb(255, 65, 31);
  padding: 2px 20px;
  color: #eee;
  font-size: 24rpx;
  margin-top:6px
}
.ticket-content{
  padding: 10px;
  text-align: center;
}